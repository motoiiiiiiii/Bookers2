<div class="row">
	<div class="col-md-3">
		<h2>User info</h2>
		<table class="table">
			<tbody>
				<tr><%= image_tag attachment_url(@user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg") %></tr>
				<tr>
					<td>name</td>
					<td><p><%= @user.name %></p></td>
				</tr>
				<tr>
					<td>introduction</td>
					<td><p><%= @user.introduction %></p></td>
				</tr>
			</tbody>
		</table>
		<%= link_to edit_user_path(@user.id) do %>
		<p class="btn btn-light">へんしゅう</p>
		<% end %>
		<h1>New Book</h1>
		<%= form_for(@book, url: '/books') do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>
		<h4>Option</h4>
		<%= f.text_area :body %>
		<%= f.submit 'Create Book' %>
		<% end %>
	</div>
	<div class="col-md-8">
		<h2>Users</h2>
		<table class="table">
			<thead>
				<tr>
					<th scope="col">image</th>
					<th scope="col">name</th>
				</tr>
			</thead>
			<tbody>
				<% @users.each do |user| %>
				<tr>
					<td><%= image_tag attachment_url(user, :profile_image, :fill, 50, 50, format: "jpg", fallback: "no_image.jpg"), size:'50x50' %></td>
					<td><%= user.name %></td>
					<td><%= link_to "show", user_path(user) %></td>
				</tr>
				<% end %>
			</tbody>
		</table>

	</div>
</div>

