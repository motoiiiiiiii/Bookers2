<div class="row">
	<div class="col-md-3">
		<h2>User info</h2>
		<table class="table">
			<tbody>
				<tr><%= image_tag attachment_url(@user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg") %></tr>
				<tr>
					<td>name</td>
					<td><p><%= @user.name %></p></td>
				</tr>
				<tr>
					<td>introduction</td>
					<td><p><%= @user.introduction %></p></td>
				</tr>
			</tbody>
		</table>
		<%= link_to edit_user_path(@user.id) do %>
		<p class="btn btn-light">へんしゅう</p>
		<% end %>
		<h1>New Book</h1>
		<%= form_for(@book, url: '/books') do |f| %>
		<h4>Title</h4>
		<%= f.text_field :title %>
		<h4>Option</h4>
		<%= f.text_area :body %>
		<%= f.submit 'Create Book' %>
		<% end %>
	</div>
	<div class="col-md-8">
		<table class="table">
			<thead>
				<tr>
					<th scope="col">title</th>
					<th scope="col">option</th>
				</tr>
			</thead>
			<tbody>
				<% @books.each do |book| %>
				<tr>
					<td>写真</td>
					<td><%= book.title %></td>
					<td><%= book.body %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>